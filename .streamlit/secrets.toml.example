# Streamlit Cloud Secrets Configuration
# ====================================
# Copy this to your Streamlit Cloud app settings under "Secrets"

# Google OAuth2 Configuration
GOOGLE_CLIENT_ID = "your-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET = "your-client-secret"
OAUTH_REDIRECT_URI = "https://your-app-name.streamlit.app"

# SMTP Configuration for Email Sending
SMTP_HOST = "smtp.gmail.com"
SMTP_PORT = 587
SMTP_USER = "osmanorka@gmail.com"
SMTP_PASS = "your-gmail-app-password-16-chars"  # Generate at https://myaccount.google.com/apppasswords
SMTP_USE_TLS = true

# Instructions:
# 1. Replace "your-app-name" with your actual Streamlit app name
# 2. Create Google OAuth client at: https://console.cloud.google.com/apis/credentials
# 3. Set redirect URI to: https://your-app-name.streamlit.app
# 4. Generate Gmail app password at: https://myaccount.google.com/apppasswords
# 5. Paste this entire content into Streamlit Cloud app settings > Secrets